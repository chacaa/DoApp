<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- TODO: customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme.Light</item>
        <item name="elevation">4dp</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24dp</item>
        <item name="popupTheme">@style/AppTheme</item>
    </style>

    <style name="Toolbar.Transparent" parent="Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/Toolbar.Transparent.Theme</item>
        <item name="popupTheme">@style/Toolbar.Transparent.Theme</item>
    </style>

    <style name="Toolbar.Transparent.Theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/InactiveTab</item>
    </style>

    <style name="Toolbar.TabLayout" parent="TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="InactiveTab" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextView" parent="@android:style/TextAppearance">

    </style>

    <style name="Title" parent="TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Subtitle" parent="TextView">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Drawer">

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/background</item>
        <item name="spinBars">true</item>
    </style>

    <style name="Drawer.Item.TextView" parent="TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="Drawer.AboveItem.TextView" parent="Drawer.Item.TextView">

    </style>

    <style name="Drawer.BelowItem.TextView" parent="Drawer.Item.TextView">
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="Drawer.Header.Title" parent="TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Drawer.Header.Subtitle" parent="TextView">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
